{
  "compilerOptions": {
    "rootDir": "..",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "../build",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "types": [],
    "jsx": "react-jsx",
    "composite": true,
    "noImplicitAny": true
  },
  "include": ["**/*.ts", "**/*.tsx", "../shared/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "../shared/**/*.test.ts"]
}
